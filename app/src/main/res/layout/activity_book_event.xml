<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".BookEvent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="390dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">



        <ImageView
            android:layout_width="330dp"
            android:layout_height="250dp"
            android:id="@+id/book_imageview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_local_activity_black_24dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name:"
            android:textSize="15dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_eventname"
            android:textSize="15dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:"
            android:textSize="15dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_eventcost"
            android:textSize="15dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="51dp"/>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/minus_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:text="-"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#AC1C73"
        android:background="@drawable/button_background"/>
    <TextView
        android:id="@+id/inc_dec_text"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="453dp"
        android:background="#ffffff"
        android:text="1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#AC1C73"
        android:layout_marginLeft="85dp"/>

    <Button
        android:id="@+id/plus_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="140dp"
        android:text="+"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#AC1C73"
        android:background="@drawable/button_background"/>
    <TextView
        android:id="@+id/total_cost_text"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:textSize="30dp"
        android:textColor="#AC1C73"
        android:background="#ffffff"
        android:layout_marginTop="453dp"
        android:layout_marginLeft="200dp"/>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:textColor="#AC1C73"
        android:text="Pay"
        android:textSize="25dp"
        android:background="@drawable/button_background"/>


</RelativeLayout>