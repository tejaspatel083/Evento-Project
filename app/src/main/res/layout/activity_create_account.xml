<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CreateAccount">

    <ImageView
        android:id="@+id/DpImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        tools:ignore="VectorDrawableCompat"/>
    <TextView
        android:id="@+id/selectimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to choose Image"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"/>
    <EditText
        android:id="@+id/CreateName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:hint="Name*"
        android:textColor="#AC1C73"
        android:textColorHint="#AC1C73"
        android:background="@drawable/text_background"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/CreateEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:hint="Email*"
        android:textColor="#AC1C73"
        android:textColorHint="#AC1C73"
        android:background="@drawable/text_background"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/CreatePassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:hint="Password*"
        android:textColor="#AC1C73"
        android:textColorHint="#AC1C73"
        android:background="@drawable/text_background"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/CreateRePassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:hint="Confirm Password*"
        android:textColor="#AC1C73"
        android:textColorHint="#AC1C73"
        android:background="@drawable/text_background"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/visible1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_visibility_black_24dp"
        android:layout_marginLeft="315dp"
        android:visibility="invisible"
        android:layout_marginTop="358dp"/>
    <TextView
        android:id="@+id/notvisible1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
        android:layout_marginLeft="315dp"
        android:visibility="invisible"
        android:layout_marginTop="358dp"/>
    <TextView
        android:id="@+id/visible2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_visibility_black_24dp"
        android:layout_marginLeft="315dp"
        android:visibility="invisible"
        android:layout_marginTop="418dp"/>
    <TextView
        android:id="@+id/notvisible2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
        android:layout_marginLeft="315dp"
        android:visibility="invisible"
        android:layout_marginTop="418dp"/>
    <Button
        android:id="@+id/CreateBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textSize="25dp"
        android:textColor="#AC1C73"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/button_background" />


</RelativeLayout>